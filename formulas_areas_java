public class Formulas {

	/*
	 * Quadrado=LadoÂ² Retangulo=ladoA*ladoB Trapezio=((B+b)*h)/2

	 */
	static double area(double lado) {
		double area;
		area = lado * lado;
		// QUADRADO

		return area;
	}

	static double area(double ladoA, double ladoB) {
		// RETANGULO
		double area;
		area = ladoA * ladoB;

		return area;
	}

	static double area(double baseMaior, double baseMenor, double altura) {
		// TRAPEZIO
		double area;
		area = ((baseMaior + baseMenor) * altura) / 2;

		return area;
	}

	public static void main(String[] args) {

		System.out.println(area(3.0)); 
		System.out.println(area(3.0,5.0));
		System.out.println(area(4.0, 5.0, 7.0));
		

	}

}
